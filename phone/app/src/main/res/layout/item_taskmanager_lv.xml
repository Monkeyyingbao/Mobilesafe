<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <!-- app图标-->
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/iv_taskmanager_lv_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_launcher"/>

    <!-- app的名字和安装位置-->
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_taskmanager_lv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- app名字-->
        <TextView
            android:id="@+id/tv_taskmanager_lv_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件管家"/>
        <!-- 安装位置-->
        <TextView
            android:id="@+id/tv_taskmanager_lv_appmemorysize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内存: 22kb"/>
    </LinearLayout>

    <!-- 占用的大小-->
    <CheckBox
        android:button="@drawable/cb_seletor"
        android:focusable="false"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/cb_taskmanager_isselete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>