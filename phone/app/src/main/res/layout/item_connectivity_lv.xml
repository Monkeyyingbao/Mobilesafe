<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <!-- app图标-->
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/iv_connectivity_lv_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_launcher"/>

    <!-- app的名字和安装位置-->
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_connectivity_lv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- app名字-->
        <TextView
            android:id="@+id/tv_connectivity_lv_rcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送: 100mb"
            android:textColor="#ff888888"/>
        <!-- 安装位置-->
        <TextView
            android:id="@+id/tv_connectivity_lv_sed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收: 11mb"
            android:textColor="#ff888888"/>
    </LinearLayout>

    <!-- 占用的大小-->
    <TextView
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_connectivity_lv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wifi"
        android:textColor="#ff888888"/>
</RelativeLayout>